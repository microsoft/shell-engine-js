{
  "compilerOptions": {
    "types": [
      "../node_modules/@types/mocha",
      "../node_modules/@types/node"
    ],
    "target": "es6",
    "lib": [
      "es5",
      "ES2015",
      "ES2017"
    ],
    "rootDir": ".",
    "baseUrl": ".",
    "outDir": "../out-test",

    "composite": true,
    "declaration": true,
    "sourceMap": true,
    "removeComments": true,
    "pretty": true,
    "incremental": true,
    "noImplicitOverride": true,
    "strict": true
  },
  "include": [
    "./**/*"
  ],
  "references": [
    { "path": "../src/tsconfig.json" }
  ]
}
